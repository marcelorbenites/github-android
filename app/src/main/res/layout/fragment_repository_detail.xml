<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
            android:id="@+id/fragment_repository_detail_title"
            android:layout_width="match_parent"
            app:title="@string/fragment_repository_detail_title"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/fragment_repository_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/fragment_repository_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/fragment_repository_detail_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>
